<h1>Delete a Book</h1>
</br>
<div class="books delete">

  <%= form_for(@book, method: 'delete') do |f|%>
    <p>Are you sure you want to permenantly delete this book?</p>
    
    <p class="book_title"><%= @book.title %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Book")%>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Back to Home", books_path, class: "button" %>
</div>